############################################################################################################
#makefile
#
#
#
#
#
############################################################################################################
#Static variables
############################################################################################################
#compiler
CC = g++

#######################################
#flags
CFLAGS = -std=c++11 `pkg-config --cflags opencv`

#######################################
#libs
LIBS = -pthread -fopenmp  -O4

#######################################
#compile project
#######################################
all: bin/main.o
	rm -f log.txt
	$(CC) ./bin/*.o $(CFLAGS) -o ./release/tracking_system $(LIBS) `pkg-config --libs opencv`

#######################################
#compile project
#######################################
clean:
	rm -r -f ./bin/
	mkdir bin
	rm -r -f ./release/
	mkdir release

############################################################################################################
#Main
############################################################################################################
bin/main.o: ./source/main.cpp
	$(CC) -c ./source/main.cpp $(CFLAGS) -o ./bin/main.o $(LIBS)
